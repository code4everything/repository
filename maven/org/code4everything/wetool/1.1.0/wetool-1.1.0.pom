<!--                                </transformer>-->
<!--                            </transformers>-->
<!--                            <artifactSet>-->
<!--                            </artifactSet>-->
<!--                        </configuration>-->
<!--                    </execution>-->
<!--                </executions>-->
<!--            </plugin>-->
        </plugins>
    </build>
</project>
